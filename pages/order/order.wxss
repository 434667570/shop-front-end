.order-info-content{
   display: flex;
   height: 100rpx;
   padding: 20rpx 40rpx;
   font-size: 14px;
   border-bottom: 4rpx solid #EDEDED;
   justify-content: space-between;
}
.order-info-box{
   display: flex;
   flex-direction: column;
   height: 100rpx;
}
.order-info-box .info{
   display: flex;
   height: 50rpx;
   line-height: 50rpx;
}
.info .info-tips{
   color: gray;
}
.pay-condition{
   height: 100rpx;
   line-height: 100rpx;
   color: #E03636;
}
.address-content{
   display: flex;
   flex-direction: column;
   /* width: 100%; */
   height: 100rpx;
   padding: 20rpx 40rpx;
   font-size: 14px;
}
.address-content .name-phone-content{
   display: flex;
   width: 100%;
   height: 50rpx;
   justify-content: space-between;
}
.name-phone-content view{
   display: flex;
}
.name-phone-content view image{
   width: 32rpx;
   height: 32rpx;
   margin-right: 16rpx;
}
.address{
   height: 50rpx;
   color: gray;
}
.add-address-content{
   display: flex;
   justify-content: center;
   margin: auto 0;
}
.add-address-content view{
   font-size: 16px;
   height: 80rpx;
   line-height: 32rpx;
}
.add-address-content image{
   width: 32rpx;
   height: 32rpx;
   margin-right: 16rpx;
}

/* 浅灰色分界线 */
.gray-border{
   width: 100%;
   height: 20rpx;
   background-color: #EDEDED;
}




.order-list{
   margin-bottom: 88rpx;  
}
/* 单个商品块 */
.order-container{
   display: flex;
   width: 100%;
   height: 200rpx;
   border-bottom: 4rpx solid #EDEDED;
}
.product-iamge-content{
   width: 26%;
   box-sizing: border-box; 
   background-color: #EDEDED;
   border: 14rpx solid #ffffff;
}
.product-iamge-content image{
   width: 100%;
   height: 100%;
}

.right-content{
   display: flex;
   flex-direction: column;
   width: 74%;
   box-sizing: border-box;
   border: 14rpx solid #ffffff;
   border-right: 30rpx solid #ffffff;
   justify-content: space-between;
}
/* 商品信息 */
.product-info-content{
   display: flex;
   width: 100%;
   height: 48rpx;
   justify-content: space-between;
}
.product-info-content view{
   font-size: 14px;
   line-height: 48rpx;
}
.item-price{
   font-size: 16px;
   text-align: right;
}


/* 下方固定下单按钮组 */
.footer-content{
   display: flex;
   width: 100%;
   height: 90rpx;
   background-color: #AB956D;
   position: fixed;
   bottom: 0;
   border-top: 4rpx solid #EDEDED;
   z-index: 99;
}
.footer-left-content{
   display: flex;
   width: 65%;
   background-color: #ffffff;
}
.footer-left-content .total-price{
   font-size: 16px;
   color: #AB956D;
   height: 90rpx;
   line-height: 90rpx;
   margin-left: 30rpx;
}


.footer-right-content{
   display: flex;
   width: 35%;
   background-color: #AB956D;
   justify-content: center; 
}
button[class="footer-right-content"]::after {
  border: 0;
} 
.footer-right-content view{
   font-size: 16px;
   color: #ffffff;
   height: 90rpx;
   line-height: 90rpx;
}

.input-content{
   display: flex;
   flex-direction: column;

   background-color: #f2f2f2;
   height: 50px;
   padding: 0px 0;
}
.input-content input{
   font-size: 16px;
   height: 40px;
   width: 95%;
   background-color: #ffffff;
   margin: auto;
   padding-left: 5px;
}
