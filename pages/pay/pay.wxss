.main-container{
   display: flex;
   flex-direction: column;
   width: 86%;
   /* background-color: red; */
   margin: 50rpx auto 0;
   padding: 30rpx 20rpx 0;
   height: 360px;
   border: 2px solid #AB956D;
   border-radius: 20px;
}
.tab-box{
   display: flex;
   width: 100%;
   height: 50px;
   background-color: #ffffff;
   border-bottom: 1px solid #AB956D;
}
.tab-box view{
   width: 100%;  
   text-align: center;
   line-height: 50px;
   font-size: 20px;
   
}
.active{
   color: #ffffff;
   background-color: #AB956D;
}
.noactive{
   
   color: #AB956D;
}

.image-container{
   display: flex;
   width: 100%;
   height: 310px;
   justify-content: center;
}
.image-container image{
   margin: auto 0;
}
.price{
   width: 100%;
   height: 30px;
   line-height: 30px;
   font-size: 20px;
   text-align: center;
   color: #AB956D;
}
.tips-container{
   font-size: 15px;
   color: gray;
   width: 90%;
   display: flex;
   margin: 10px auto 0;
}
.orderId{
   color: #AB956D;
   text-align: center;
   font-size: 20px;
   margin-top: 10px;
}
.returnMy{
   background-color: #AB956D;
   color: #ffffff;
   width: 50%;
}