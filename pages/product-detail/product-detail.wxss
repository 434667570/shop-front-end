/* 上方商品大图 */
.header-image {
   height: 240px;
   display: flex;
   justify-content: center;
}
.header-image image {
   height: 100%;
   width: 100%;
}
/* 中间胶囊按钮组 */
.btn-content{
   display: flex;
   height: 50px;
   padding: 0 40rpx;
}
.btn-content .btn-content-box{
   display: flex;
   height: 100%;
   width: 100%;
   border-radius: 30px;
   background-color: #AB956D;
}
.count-box,.cart-box{
   font-size: 12px;
   color: white;
   line-height: 50px;
   display: flex;
   width: 50%;
}
.count-box.disable,.cart-box.disable{
   color: #D5D5DB;
}
.count-box picker{
   display: flex;
   width: 100%;
   justify-content: center;
}
.count-box picker view{
   display: flex;
}
.count-tips,.count-data,.count-icon{
   margin-right: 26rpx;
}
.count-icon,.cart-icon{
   height: 50px;
   width: 20px;
}
.cart-tips{
   margin-left: 50rpx;
}
.cart-icon{
   margin-left: 26rpx;
}
.btn-border{
   width: 1px;
   height: 20px;
   margin: auto 0;
   border-right: 2px dotted white;
}
/* 产品信息 */
.product-info-box{
   display: flex;
   flex-direction: column;
   height: 100px;
   /* justify-content: center; */
   align-items: center;
}
.product-info-box view{
   margin-top: 10px;
}
.info-stock{
   font-size: 12px;
}
.info-name{
   font-size: 18px;
}
.info-price{
   font-size: 14px;
}
/* 浅灰色分界线 */
.gray-border{
   width: 100%;
   height: 10px;
   background-color: #EDEDED;
}
/* 下面产品详情 */
.product-detail-content{
   display: flex;
   flex-direction: column;
   width: 100%;
   padding-bottom: 50px;
}
.detail-topic-box{
   display: flex;
   align-items: center;
   justify-content: center;
   height: 40px;
   border-bottom: 2px solid #AB956D;
}
.detail-topic-box view{
   color: #AB956D;
   font-size: 16px;
}
.detail-image-box{
   display: flex;
   width: 100%;
   flex-direction: column;
}
.detail-image-box image{
    width: 100%; 
}




.fixed-btns-box{
  position: fixed;
  top:50rpx;
  right:12px;
  width: 80rpx;
}
.fiexd-cart image{
  height: 64rpx;
  width: 64rpx;
}
.fiexd-cart view{
  font-size: 24rpx;
  background-color: #AB956D;
  color: white;
  position: absolute;
  right: 64rpx;
  top: 0rpx;
  height: 36rpx;
  width: 36rpx;
  line-height: 36rpx;
  border-radius: 36rpx;
  text-align: center;
}
.fiexd-cart.animate{
  animation: aCartScale 200ms cubic-bezier(.17,.67,.83,.67);
  animation-fill-mode: backwards;
}

@-webkit-keyframes aCartScale{
  0%{
    -webkit-transform: scale(1.1);
  }
  100% {
    -webkit-transform: scale(1);
  }
}


.small-top-img{
  height: 180rpx;
  width: 180rpx;
  right:38rpx;
  position: absolute;
  opacity: 0;
}
.small-top-img.animate{
  opacity: 1;
  /*-webkit-transition:all 1000ms cubic-bezier(.4,.46,.3,1.31);*/
  -webkit-transition:all 1000ms cubic-bezier(0.175, 0.885, 0.32, 1.275);
}