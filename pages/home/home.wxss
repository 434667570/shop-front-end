@import '../templates/product/product-list.wxss';
/*            轮播图          */
.swiper{
   width: 100%;
   height: 400rpx;
}

.swiper-item,navigator{
   width: 100%;
   height: 100%;
}

.swiper-item .item-image{
   width: 100%;
   height: 100%;
}
navigator image{
    width: 100%;
   height: 100%;
}
/*            主题          */

.theme-topic,.products-main-topic{
   font-size: 16px;
   text-align: center;
   height: 100rpx;
   line-height: 100rpx;
   color: #AB956D;
}

.theme-box{
   /* 默认横向排列 */
   display: flex;
   height: 700rpx;
   width: 100%;
   /* 必要时换行 */
   flex-wrap: wrap;  
}
.theme-item{
   height: 346rpx;
   width: 50%;
   box-sizing: border-box;
   border-bottom: 2rpx solid white;
}
.theme-item image{
   height: 100%;
   width: 100%;
}
.theme-item:first-child{
   border-right: 5rpx solid white;
}
/* 同时拥有两个类名样式才生效 */
.theme-item.big{
   width: 100%;
   border: none;
}
.theme-big image{
   width: 100%;
   height: 100%;
}

.theme-topic{
   text-align: center;
   height: 100rpx;
   line-height: 100rpx;
   color: #AB956D;
}

